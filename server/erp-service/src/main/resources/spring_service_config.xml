	<!-- enable method call log -->
	<bean id="methodCallLogInterceptor" class="com.junyi.ecommerce.core.spring.interceptor.MethodCallLogInterceptor">
		<property name="simpleLogElapse" value="50"/>
		<property name="stackTrackLogElapse" value="80"/>
	</bean>

	<bean id="afterCommitExecutorService" class="com.junyi.ecommerce.core.spring.tx.AfterCommitExecutorService">
	</bean>

	<aop:config>
		<aop:pointcut id="servicePointcut" expression="execution(* com.junyi.erp.service..*.*(..))" />
		<aop:advisor advice-ref="methodCallLogInterceptor" pointcut-ref="servicePointcut"/>
	</aop:config>

